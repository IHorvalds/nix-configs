nnoremap <SPACE> <Nop>
let g:mapleader = " "
set listchars = "tab:» ","trail:·","nbsp=␣"
set noautochdir
set hlsearch
set noshowmode

let g:vimCfgDir = "~/.config/vim"

call plug#begin()

Plug 'tpope/vim-sensible'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'crusoexia/vim-monokai'
Plug 'bling/vim-bufferline'
Plug 'ptzz/lf.vim'
Plug 'voldikss/vim-floaterm'
Plug 'preservim/nerdtree'
Plug 'tomasiser/vim-code-dark'
Plug 'tpope/vim-commentary'
Plug 'romainl/vim-cool'
Plug 'matze/vim-move'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'cespare/vim-toml'
Plug 'tpope/vim-fugitive'
Plug 'ryanoasis/vim-devicons'
Plug 'mileszs/ack.vim'
Plug 'mbbill/undotree'
Plug 'thinca/vim-breadcrumbs'

" LSP configurations
Plug 'prabirshrestha/vim-lsp'
Plug 'mattn/vim-lsp-settings'
Plug 'prabirshrestha/asyncomplete.vim'
Plug 'prabirshrestha/asyncomplete-lsp.vim'

call plug#end()

execute 'source ' . g:vimCfgDir . '/options.vim'
execute 'source ' . g:vimCfgDir . '/colours.vim'
execute 'source ' . g:vimCfgDir . '/language-servers.vim'
execute 'source ' . g:vimCfgDir . '/ack.vim'
execute 'source ' . g:vimCfgDir . '/keymaps.vim'
